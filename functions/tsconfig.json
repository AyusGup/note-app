{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true, // Enable JSON imports
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["src/**/*"], // Includes all files in `src`, including `.json`
  "exclude": ["node_modules"]
}
